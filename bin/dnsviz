import importlib
import sys

def usage(err=None):
    if err is not None:
        err += '\n\n'
    else:
        err = ''
    sys.stderr.write('''%sUsage: dnsviz <command> [args]
Commands:
    probe          - issue diagnostic DNS queries
    grok           - assess diagnostic DNS queries
    graph          - graph the assessment of diagnostic DNS queries
    print          - process diagnostic DNS queries to textual output
    query          - assess a DNS query
    help           - show usage for a command
''' % (err))

def main():
    if len(sys.argv) < 2:
        usage()
        sys.exit(0)

    if sys.argv[1] == 'help':
        if len(sys.argv) < 3:
            usage()
            sys.exit(0)

        command = sys.argv[2]
    else:
        command = sys.argv[1]

    try:
        mod = importlib.import_module('dnsviz.commands.%s' % command)
    except ImportError:
        usage('Invalid command: %s' % command)
        sys.exit(1)

    if sys.argv[1] == 'help':
        mod.usage()
    else:
        mod.main(sys.argv[1:])

if __name__ == "__main__":
    main()
